# Use official OpenJDK base image
FROM fmk.nexus.onefiserv.net/fmk/java/openjdk17-jre:FMK-06-14-24

# Create user and group for running app securely
RUN groupadd -r mygroup && useradd -r -g mygroup myuser

# Create app directory with appropriate permissions
RUN mkdir /app && chown -R myuser:mygroup /app

# Set working directory
WORKDIR /app

# Copy jar from build stage
COPY --chown=myuser:mygroup target/*.jar app.jar

# Expose the port your Spring Boot app runs on
EXPOSE 8080

# Run the application as non-root user
USER myuser

# Run the jar file
ENTRYPOINT ["java", "-jar", "app.jar"]